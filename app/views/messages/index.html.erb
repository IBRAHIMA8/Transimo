
<style>
  .icon-flipped {
  transform: scaleX(-1);
  -moz-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  -ms-transform: scaleX(-1);
  }
  .glyphicon.glyphicon-log-out {
    font-size: 20px;
}
</style>

<div class="panel panel-default">


<% if @over_ten %>
  <%= link_to 'Previous message', '?m=all', class: 'btn btn-link pull-right' %>
<% end %>



<%= link_to '<i class="glyphicon glyphicon-log-out icon-flipped"></i>'.html_safe,
'/conversations', { :class => 'tooltips, btn btn-link', 'data-toggle' => 'tooltip',
   'data-placement' => 'right', :title => 'Back To Inbox' } %>
<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
});
</script>

<div>
<h3>Users</h3>
<% @users.each do |user| %>
  <% if user.id != current_user.id %>
    <li>
      <div class="item">
        <%= link_to user.name, user %>
        <%= link_to 'Message', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
      </div>
    </li>
  <% end %>
<% end %>
</div>
<div class="left_box">
  <div class="share_box">
<div class="ui segment">
  <table>
        <tr>
          <td>
            <div class="main_box_head">

  <% @messages.each do |message| %>
    <% if message.body.present? %>
      <div class="item">
        <div class="content">
          <div class="comment"><strong class="info1"><%= message.user.name %></strong> <%= message.message_time %></div>
          <div class="list">
            <div class="item">
              <i class="right triangle icon"></i>
              <div class="comment">
              <%= message.body %> /
              <% if message.user == current_user %>
                <%= message.read ? 'Already read' : 'Unread' %>
                    <% end %>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <table>
        <td>
        <tr>
        <%= form_with(model: [@conversation, @message]) do |f| %>
          <div class="field">
            <table>
                  <tr>
                    <td>
            <%= f.text_area :body, class: "form-control" %>
          </div>
            <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
          <div>
            <%= f.submit "send a message" %>
      </div>
    </td>
    </tr>
    </table>
   </div>
  </div>
<% end %>
</div>
