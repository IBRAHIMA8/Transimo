<div class="container">
   <div class="text-center">
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <h3><%= form.label :title %></h3>
    <%= form.text_area :title, placeholder: 'Saisissez le titre de votre produit (ex: Deux chambres salon)'%>
  </div>

  <div class="field">
    <h3><%= form.label :description %></h3>
    <%= form.text_area :description, placeholder: 'Quelques descriptions de votre produits Ici' %>
  </div>

  <div class="field">
    <h3><%= form.label :localisation %></h3>
    <%= form.text_field :localisation, placeholder: 'Indiquez la localité où se situe votre produit'  %>
  </div>

  <div class="field">
    <h3><%= form.label :availability %></h3>
    <%= form.select :availability,['Libre', 'Immédiatement_Libre', 'Bientôt_Libre'], placeholder: 'Disponibilité' %>
</div>

  <div class="field">
    <h3><%= form.label :remarks %></h3>
    <%= form.text_area :remarks, placeholder: "Laissez d'éventuelles caractéristiques de votre produits Ici" %>
  </div>

  <div class="field">
    <h3><%= form.label :cost %></h3>
    <%= form.text_area :cost, placeholder: 'Indiqué Ici le coût du Loyer' %>
  </div>

  <div class="field">
    <h3><%= form.label :image %></h3>
    <%= image_tag(@product.image.url) if @product.image && @product.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="actions">
    <% if action_name=='new' %>

      <%= form.submit 'Poster le nouveau produit',class:'btn btn-primary' %> ||
      <%= link_to 'Retour', products_path,class:'btn btn-primary' %>

      <% else %>
      <%= form.submit 'Modifier',class:'btn btn-primary' %>
      <% end %>
  </div>
<% end %>
</div>
</div>
