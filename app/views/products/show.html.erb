<style>
  strong{
    font-size: 20px;
    font-family: fantasy;
    color: black;
  }

  span{
    color: black;
    font-size: 18px;
    font-family: 'Lucida';
  }

</style>

<div class="container">
 <div class="container">
  <div class="card container">

<p>
  <strong>Titre:</strong>
  <span><%= @product.title %></span>
</p>

<p>
  <strong>Description:</strong>
  <span><%= @product.description %></span>
</p>

<p>
  <strong>Localisation:</strong>
  <span><%= @product.localisation %></span>
</p>

<p>
  <strong>Disponibilité:</strong>
  <span> <%= @product.availability %></span>
</p>

<p>
  <strong>Remarques:</strong>
  <span><%= @product.remarks %></span>
</p>

<p>
  <strong>Côut du Loyer:</strong>
  <span><%= @product.cost %></span>
</p>

<p>
  <strong>Image du Produit:</strong>
  <% if @product.image.file.nil? %>

  <% else %>
  <span><%= image_tag(@product.image.url(:thumbnail), :alt => @product.title)%></span>
  <% end %>
</p>

<% if current_user.present? && current_user.id == @product.user_id %>

<td><%= link_to 'Editer', edit_product_path(@product), class:'btn btn-primary text-light' %></td>
<td><%= link_to 'Retour', products_path , class: 'btn btn-primary text-light' %></td>

<% else %>
<%= link_to 'Commander', conversations_path(sender_id: current_user.id, recipient_id: @product.user.id), method: :post, class: 'btn btn-outline-success' %>

<%= link_to 'Retour', products_path , class: 'btn btn-outline-primary' %>

<% end %>

    </div>
  </div>
</div>
