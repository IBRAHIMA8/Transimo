<%= form_with(model: @user, local: true, url: user_path(@user.id)) do |f| %>
  <br>
  <p class="comment">Name:<%= @user.name %></p>
  <br>
  <p class="comment">Adress Email: <%= @user.email %></p>
  <%= f.label :'Photo de profil', class:"comment" %>
  <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "Modifier", class:"btn btn-outline-warning" %>
<% end %>
