<h1 class="comment">Page de Profil de <%= @user.name %></h1>
    <div>
  <% if current_user.id == @user.id %>
    <p><%= link_to "Modifier votre profil", edit_user_registration_path(@user.id), class:"btn btn-warning" %></p>
  <% end %>

  <br><br>


  <% if current_user.id == @user.id %>

    <%= link_to 'Voir vos conversations', conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post, class:"btn btn-warning" %>


    <% end %>
  </div>


  <br><br><br>
    <table class="table">

  <h3>Voici la liste de vos produits</h3>

  <%  if current_user.id == @user.id %>
   <thead>
     <tr>
       <th>Title</th>
     <!--  <th>Description</th>-->
       <th>Localisation</th>
       <th>Availability</th>
         <!-- <th>Remarks</th>-->
       <th>Product Cost</th>
       <th>Product Image</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @products.each do |product| %>
       <tr>
         <td><%= product.title %></td>
           <!-- <td><%= product.description %></td>-->
         <td><%= product.localisation %></td>
         <td><%= product.availability %></td>
           <!-- <td><%= product.remarks %></td>-->
         <td><%= product.cost %><span>Fcfa</span></td>
         <td><% if product.image.file.nil? %>
           <% else %>
           <%= image_tag product.image.url, class: "im_prod" %></td>
           <% end %>
          <td><%= link_to 'show', product_path(product.id), class:'btn btn-outline-primary' %></td>
          <td><%= link_to 'edit', edit_product_path(product.id), class:'btn btn-outline-warning' %></td>
          <td><%= link_to 'destroy', product_path(product.id), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class:'btn btn-outline-danger' %></td>
      <% end %>
  <% else %>
    <%= "Il n'y a pas de produit créé par cet utilisateur" %>
  <% end %>
</tbody>
</table>
<br><br>

<span><%= link_to 'Ajouter Nouveau Produit', new_product_path, class: 'btn btn-primary text-light' %></span>
